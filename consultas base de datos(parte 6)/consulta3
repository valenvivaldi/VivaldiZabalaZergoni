select dni,n_y_ap as Nombre_Y_apellido,nombre_programa, monto, frecuencia, tipo_de_medio, num_de_tarjeta, num_de_cuenta,nombre_titular, codigo_verificacion from ciudad_de_los_niños.persona natural join (select * from ciudad_de_los_niños.aporta natural join ((select id,'Tarjeta' as tipo_de_medio ,nro as Num_de_Tarjeta,null as num_de_cuenta,nombre_titular,codigo_verificacion from ciudad_de_los_niños.tarjeta) union (select id,'Debito' as tipo_de_medio ,null as Num_de_Tarjeta,nro_cuenta as Num_de_cuenta,nombre_titular,codigo_verificacion from ciudad_de_los_niños.debito) ) as medios) as mediosyaportes;